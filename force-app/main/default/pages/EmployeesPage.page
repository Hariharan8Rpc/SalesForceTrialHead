<apex:page Controller="ExtensionEmployeeController" showHeader="false" showQuickActionVfHeader="false">
     <c:NavComponent ></c:NavComponent>
   <style>
    .container1{
flex-wrap: wrap;
padding: 10px;

display: flex;
justify-content:flex-start;
flex-direction: row;
}

.child{    
    border-radius: 15px;
    padding: 10px;
    margin: 5px;     
    background-color: rgb(245, 177, 95);
    min-width: 300px;
    max-width: 500px;
}
.container2{
flex-wrap:nonwrap;
}
.project{
    min-width: 400px;
}
    </style>
    <apex:pageBlock title="Employee List">
    <apex:pageBlockTable value="{!empProject}" var="emp">
        <apex:column value="{!emp.employee.Name}"/>
        <apex:column value="{!emp.employee.Department__c}"/>
        <apex:Column value="{!emp.addr.name}"/>
        <apex:Column value="{!emp.addr.Pincode__c}"/>
        <apex:Column value="{!emp.addr.State__c}"/>
        <apex:Column value="{!emp.addr.City__c}"/>   
        <apex:column value="{!emp.employee.Id}"/>
        <!--  <apex:commandButton title="View"/>  -->
   		<apex:column headerValue="Action">
       <apex:form > 
           <apex:facet name="header">Action</apex:facet>
      		<apex:commandButton value="View" action="{!getProjectsRelatedToEmployee}" reRender="pr">          
                <apex:param name="EmployeeSearchId" value="{!emp.employee.Id}" assignTo="{!EmployeeSearchId}" /> 
           </apex:commandButton> 
        </apex:form>
       </apex:column> 
   
       	<apex:pageBlockTable value="{!emp.projects}" var="proj">
         	<apex:Column value="{!proj.Name}" headervalue="project name"/>
            <apex:Column value="{!proj.Domain__c}" headervalue="project Domain"/>
        </apex:pageBlockTable>   
  
</apex:pageBlockTable>
        
      <apex:pageBlockSection title="Detail View">
       <!--  <apex:outputPanel rendered="{!SingleEmplist!=0}">  -->
         <h1>
              {!SingleEmplist.employee.Name}
         </h1>
        <apex:pageBlockTable value="{!SingleEmplist.projects}" var="proj" id="pr">
            
           <apex:column value="{!proj.Name}"/>  
           <apex:column value="{!proj.Domain__c}"/>    
            <apex:column value="{!proj.Duration__c}"/> 
           <apex:column value="{!proj.Priority__c}"/> 
       </apex:pageBlockTable>
  <!--    </apex:outputPanel>  -->
        
<body>
    
<div class="container1">
<div class="child">
    <div>
        <div>
            <label><h3>Employee Details</h3></label>
        </div>
        <div>
            <label> <b> Employee ID:</b>{!SingleEmplist.employee.Id}</label>
        </div>
        <div>
            <label> <b> Name:</b> {!SingleEmplist.employee.Name}</label>
        </div>
        <div>
            <label> <b> Department:</b> {!SingleEmplist.employee.Department__c}</label>
        </div>
       
    </div>
</div>


<div class="child">
  
  <!--   <h4 *ngIf="!employee.address" class="text-danger">Address not Present</h4> 
        <div If="employee.address">-->
    <!--  <apex:outputPanel rendered=" {!SingleEmplist.addr==null || ''}">     -->
            <div>
                <label><h3>Address</h3></label>
            </div>
            <div>
                <label> <b>ID:</b>{!SingleEmplist.addr.Id}</label>
            </div>
            <div>
                <label> <b>Address name:</b>{!SingleEmplist.addr.Name}</label>
            </div>
            <div>
                <label> <b>City:</b> {!SingleEmplist.addr.City__c}</label>
            </div>
            <div>
                <label> <b>State:</b> {!SingleEmplist.addr.State__c}</label>
            </div>
            <div>
                <label> <b>Pincode:</b> {!SingleEmplist.addr.Pincode__c}</label>
            </div>
         <!--       </apex:outputPanel> -->
   <!-- </div> --> 
</div>
</div>
<div class="container2">
    
<div class="project">
   
    <h4>Projects  working</h4>
    <!-- <h6>{{employee.project.length==0}}</h6> 
    <h4 *ngIf="!employee.project.length" class="text-danger">No Projects Assigned</h4> -->
    <!-- <div *ngif="!employee.project.length">  -->
  <table class="table">
    <tr>
        <th>Project ID</th>
        <th>project Admin</th>
        <th>Title</th>
        <th>Domain</th>
        <th>Duration</th>
    </tr>
      <apex:repeat value="{!SingleEmplist.projects}" var="project">
    <tr>      
     
        <td>{!project.Name}</td>
        <td>{!project.Domain__c}</td>
        <td>{!project.Duration__c}</td>
        <td>{!project.Priority__c} months</td>
    </tr>
    </apex:repeat>
</table>
<!-- </div> -->
</div>
</div>
              
</body>
      </apex:pageBlockSection>
    </apex:pageBlock>        
</apex:page>